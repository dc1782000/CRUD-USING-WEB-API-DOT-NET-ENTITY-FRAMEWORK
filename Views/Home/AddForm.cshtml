@model MyFirstApp.Models.EmpModel
@{
    ViewBag.Title = "AddForm";
}

 


<style>
    .form-container {
        max-width: 400px;
        margin: 0 auto;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-label {
        display: block;
        font-weight: bold;
        margin-bottom: 5px;
    }

    .form-control {
        width: 100%;
        padding: 8px;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
    }

    .submit-button {
        padding: 8px 16px;
        background-color: #4CAF50;
        color: white;
        border: none;
        cursor: pointer;
        border-radius: 4px;
    }

        .submit-button:hover {
            background-color: #45a049;
        }
</style>

<div class="form-container">
    @using (Html.BeginForm("AddForm", "Home", FormMethod.Post))
    {
        <div class="form-group">
            @Html.LabelFor(m => m.Name, new { @class = "form-label" })
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.City, new { @class = "form-label" })
            @Html.TextBoxFor(m => m.City, new { @class = "form-control" })
        </div>

        <button type="submit" class="submit-button">Submit</button>
    }
</div>


